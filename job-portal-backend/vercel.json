{
  "builds": [
    {
      "src": "job_portal/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "job_portal/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1" 
    }
  ],
  "hooks": {
    "postinstall": "python manage.py collectstatic --noinput" 
  }
}
